<div class="login-container">
  <div class="box">
    <div class="heading"></div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Phone number, username, or email", class: 'box-input' %> <%= f.label :email, class: 'box-label' %></div>

    <div class="field"><%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'box-input' %> <%= f.label :password, class: 'box-label' %><br /></div>

    <% if devise_mapping.rememberable? %>
    <div class="field"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end %> <%= f.button "Log in", class: 'login-button', title: 'login' %>

    <div class="separator">
      <div class="line"></div>
      <p>OR</p>
      <div class="line"></div>
    </div>
    <div class="other">
      <button class="fb-login-btn" type="button">
        <i class="fa fa-facebook-official fb-icon"></i>
        <span class="">Log in with Facebook</span>
      </button>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %> <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'forgot-password' %><br />
      <% end %>
    </div>
    <% end %>
  </div>
  <div class="box">
    <p>
      Don't have an account? <%- if devise_mapping.registerable? && controller_name != 'registrations' %> <%= link_to "Sign up", new_registration_path(resource_name), class: 'signup' %><br />
      <% end %>
    </p>
  </div>
</div>
